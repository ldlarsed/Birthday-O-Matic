<resources>

    <!-- Base application theme. -->
    <!-- Before android 5 action bar is hidden here. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_0</item>
        <item name="colorControlNormal">@color/secondary_1_1</item>
        <item name="colorControlActivated">@color/secondary_2_2</item>
        <item name="colorControlHighlight">@color/secondary_2_2</item>
        <item name="android:textColor">@color/secondary_1_2</item>
        <item name="android:textColorPrimary">@color/secondary_2_2</item>
        <item name="android:textColorPrimaryDisableOnly">@color/secondary_2_2</item>
        <item name="android:keyTextColor">@color/primary_1</item>
    </style>

</resources>

