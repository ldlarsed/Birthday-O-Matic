<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s198569.hangman.LoginActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="1">

        <RelativeLayout
            android:id="@+id/layout_new_player_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="@color/secondary_1_4"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="@string/new_player"
                android:textAlignment="center"
                android:textColor="@color/secondary_1_2"
                android:textSize="@dimen/menu_item_size" />

            <EditText
                android:id="@+id/edit_text_new_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="60dp"
                android:singleLine="true"
                android:textColor="@color/secondary_2_2"
                android:textSize="@dimen/new_player_text_size"
                android:width="160dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_new_player"
                android:onClick="onPlayGameButtonClick"
                android:text="@string/menu_play"
                android:width="160dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_existing_player_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dp"
           >

            <TextView
                android:id="@+id/existing_players_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/secondary_1_4"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="@string/existing_player"
                android:textAlignment="center"
                android:textColor="@color/secondary_1_2"
                android:textSize="@dimen/menu_item_size" />


            <ListView
                android:id="@+id/existing_players_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/existing_players_title"
                android:fadeScrollbars="false"
                android:paddingTop="10dp"
                android:scrollbarSize="20px"></ListView>


        </RelativeLayout>

    </GridLayout>
</RelativeLayout>
