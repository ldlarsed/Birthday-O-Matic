<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s198569.hangman.GamePlayActivity"
    android:id="@+id/gameplay_layout"
    >

    <GridLayout
        android:id="@+id/layout_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1">

        <TextView
            android:text="@string/player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName"
            android:layout_gravity="left"
            android:textSize="@dimen/existing_player_text_size"
            android:shadowRadius="5"
            android:textColor="@color/secondary_2_2"
            android:shadowColor="@color/secondary_1_4"
            android:shadowDx="3"
            android:shadowDy="3"
            />

        <TextView
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerScore"
            android:layout_gravity="right"
            android:textSize="@dimen/existing_player_text_size"
            android:shadowRadius="5"
            android:textColor="@color/secondary_2_2"
            android:shadowColor="@color/secondary_1_4"
            android:shadowDx="3"
            android:shadowDy="3"
            />
    </GridLayout>

    <ImageView
        android:id="@+id/hangman_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/word_layout"
        android:paddingRight="40dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/word_layout"
        android:layout_above="@+id/keboard_layout"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"></LinearLayout>


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/keboard_layout"
        android:columnCount="7"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:gravity="bottom|end"></GridLayout>




</RelativeLayout>
