<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.s198569_mappe2" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPerson"
            android:label="@string/title_activity_register_person" >
        </activity>
        <activity android:name=".RegisterMessage" >
        </activity>
        <activity
            android:name=".BuddyList"
            android:label="@string/title_activity_buddy_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <receiver android:name=".broadcasts.BootCompleted"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".services.BDayOnBootService"></service>

    </application>

</manifest>
