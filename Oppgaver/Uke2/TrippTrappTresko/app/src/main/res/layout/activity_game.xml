<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s198569.tripptrapptresko.GameActivity">

    <TextView android:text="@string/player1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPlayer1" />

    <TextView android:text="@string/player_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlayer1"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewPlayerName1" />

    <TextView android:text="@string/player2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textViewPlayer2" />

    <TextView android:text="@string/player_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlayer2"
        android:layout_alignEnd="@+id/textViewPlayer2"
        android:id="@+id/textViewPlayerName2"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button1"
        android:onClick="playerMove"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/textViewPlayer1" />

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button2"
        android:onClick="playerMove"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textViewPlayer2"
        android:onClick="playerMove"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button4"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:onClick="playerMove"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:onClick="playerMove"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button3"
        android:onClick="playerMove"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button7"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="playerMove"/>

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button8"
        android:onClick="playerMove"
        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/button9"
        android:onClick="playerMove"
        android:layout_alignTop="@+id/button8"
        android:layout_alignStart="@+id/button6" />

</RelativeLayout>
